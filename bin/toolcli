#!/usr/bin/env php
<?php

require __DIR__.'/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use ToolCli\Command\Demo\DemoArgumentCommand;
use ToolCli\Command\Demo\DemoChoiceCommand;
use ToolCli\Command\Demo\DemoCommand;
use ToolCli\Command\Demo\DemoInputCommand;
use ToolCli\Command\Git\Flow\GitFlowCommand;
use ToolCli\Command\Git\Flow\GitFlowFeatureCommand;
use ToolCli\Command\Git\Flow\GitFlowHotfixCommand;
use ToolCli\Command\Git\Flow\GitFlowReleaseCommand;
use ToolCli\Command\HelloCommand;
use ToolCli\Command\Php\Password\PhpHashController;
use ToolCli\Command\Php\Password\PhpHashRevertController;
use ToolCli\Command\Php\PhpUrlController;

$application = new Application();

// ... register commands
$application->add(new HelloCommand());
$application->add(new GitFlowCommand());
$application->add(new DemoCommand());
$application->add(new DemoArgumentCommand());
$application->add(new DemoInputCommand());
$application->add(new DemoChoiceCommand());
$application->add(new GitFlowFeatureCommand());
$application->add(new GitFlowReleaseCommand());
$application->add(new GitFlowHotfixCommand());
$application->add(new PhpHashController());
$application->add(new PhpHashRevertController());
$application->add(new PhpUrlController());

$application->run();
